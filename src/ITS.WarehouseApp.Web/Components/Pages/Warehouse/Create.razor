@page "/warehouse/create"
@using ITS.WarehouseApp.Dtos
@using System.ComponentModel.DataAnnotations
@inject WarehouseApiClient ApiClient
@inject NavigationManager Navigation

<h3>Nuovo Articolo Magazzino</h3>

@if (!string.IsNullOrEmpty(_message))
{
    <div class="alert @_alertClass">@_message</div>
}

<EditForm Model="_item" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="mb-3">
        <label class="form-label">Nome Prodotto</label>
        <InputText class="form-control" @bind-Value="_item.ProductName" />
    </div>
    <div class="mb-3">
        <label class="form-label">Quantità in Magazzino</label>
        <InputNumber class="form-control" @bind-Value="_item.QuantityInStock" />
    </div>
    <button type="submit" class="btn btn-primary">Crea</button>
</EditForm>
